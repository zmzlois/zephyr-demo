{
  "name": "hero",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hero/src",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": ["components", "utils"],
  "targets": {
    "build": {
      "executor": "@nx/rspack:rspack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "web",
        "outputPath": "dist/apps/hero",
        "main": "apps/hero/src/main.ts",
        "tsConfig": "apps/hero/tsconfig.app.json",
        "rspackConfig": "apps/hero/rspack.config.ts",
        "assets": ["apps/hero/src/favicon.ico", "apps/hero/src/assets"]
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production",
          "optimization": true,
          "sourceMap": false
        }
      }
    },
    "serve": {
      "executor": "@nx/rspack:dev-server",
      "options": {
        "buildTarget": "hero:build:development",
        "port": 4201
      },
      "configurations": {
        "development": {},
        "production": {
          "buildTarget": "hero:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "config": "apps/hero/vitest.config.ts"
      }
    },
    "biome-lint": {
      "executor": "@gitopslovers/nx-biome:biome-lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/hero/**/*.ts"],
        "write": false,
        "unsafe": false
      }
    }
  }
}
